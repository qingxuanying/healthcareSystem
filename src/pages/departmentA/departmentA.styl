.hospitalizationA
    display: flex
    .Aroom-info
        background-color: #FFFFFF
        width: 30%
        border-radius: 10px
        height: 600px
        overflow-y: scroll
        .Hospi-Btitle
            font-weight: 700
            font-size: 16px
            padding: 3%
            display: flex
            justify-content: space-between
        .Hospi-Bbody
            width: 100%
            margin-top: 5%
            opacity: 1;
            .Hospi-Bbody-h
                display: flex
                justify-content: space-between
                padding: 3%
                .Hospi-Bbody-hl
                    font-size: 14px
                .Hospi-Bbody-hr
                    color: #63A0E6
            .Hospi-Bbody-b
                display: flex
                justify-content: space-between
                padding: 3%
                border-bottom: 1px dashed #E6E6E6
                .Hospi-Bbody-bblue
                    width: 39px
                    height: 30px
                    border-radius: 2px
                    background-color: #63A0E6
                .Hospi-Bbody-bgrey
                    width: 39px
                    height: 30px
                    border-radius: 2px
                    background-color: #E6E6E6
    .Ap-info
        background-color: #FFFFFF
        width: 60%
        border-radius: 10px
        margin-left: 3%
        .Hospi-Ptitle
            font-weight: 700
            font-size: 16px
            padding: 3%
        .Hospi-Pbody
            width: 100%
            display: flex
            padding: 1%
            // margin-top: 5%
            opacity: 1;
            border-radius: 10px
            
            .Hospi-Pbody-l
                width: 20%
                background-color: #EEF6F6
                border-radius: 10px 0 0 10px
                border-top: solid #63A0E6 2px
                border-bottom: solid #63A0E6 2px
                border-left: solid #63A0E6 2px
                .Hospi-Pbody-lid
                    font-weight: 700
                    font-size: 14px
                    padding: 5%
                .Hospi-Pbody-ldate
                    color: #63A0E6
                    font-size: 12px
                    padding: 5%
                .Hospi-Pbody-lpname
                    padding: 5%
                    font-size: 12px
                .Hospi-Pbody-lsd
                    padding: 5%
                    font-size: 12px
            .Hospi-Pbody-m
                width: 70%
                border-top: solid #63A0E6 2px
                border-bottom: solid #63A0E6 2px
                .Hospi-Pbody-mitem
                    padding: 1.5%
                    font-size: 12px
                    font-weight: 400
                    display: flex
                    .Hospi-Pbody-miteml
                        padding-right: 20px
            .Hospi-Pbody-r
                width: 10%
                background-color: #EEF6F6
                border-radius: 0 10px 10px 0
                border-top: solid #63A0E6 2px
                border-right: solid #63A0E6 2px
                border-bottom: solid #63A0E6 2px
                display: flex;
                justify-content: center; /* 水平居中 */
                align-items: center; /* 垂直居中 */
        .Hospi-Pbody2
            padding: 1%
            display: flex
            .Hospi-Pbody2-l
                width: 20%
                height: 60px
                border-radius: 10px 0 0 10px
                border-top: solid #63A0E6 2px
                border-bottom: solid #63A0E6 2px
                border-left: solid #63A0E6 2px
                display: flex
                // justify-content: center; /* 水平居中 */
                align-items: center; /* 垂直居中 */
                .Hospi-Pbody2-lid
                    font-weight: 700
                    font-size: 14px
                    padding: 5%
            .Hospi-Pbody2-m
                width: 65%
                border-top: solid #63A0E6 2px
                border-bottom: solid #63A0E6 2px
            .Hospi-Pbody2-r
                width: 15%
                border-radius: 0 10px 10px 0
                border-top: solid #63A0E6 2px
                border-right: solid #63A0E6 2px
                border-bottom: solid #63A0E6 2px
                display: flex
                justify-content: center; /* 水平居中 */
                align-items: center; /* 垂直居中 */
                

